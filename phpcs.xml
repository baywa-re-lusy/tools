<?xml version="1.0"?>
<ruleset name="BayWa r.e. TMS Coding Standard">
    <description>BayWa r.e. TMS Coding Standard</description>

    <!-- display progress -->
    <arg value="p"/>
    <arg name="colors"/>
    <arg name="extensions" value="php,dist,phtml"/>
    <arg name="report-full"/>
    <arg name="report-junit" value="./results/PHPCS/result.xml"/>

    <exclude-pattern>*.config.php</exclude-pattern>
    <exclude-pattern>router.php</exclude-pattern>

    <!-- inherit rules from: -->
    <rule ref="PSR12"/>
</ruleset>
